---
const { sectionTitle, description } = Astro.props;
---

<div class="flex flex-col items-center gap-4 mb-4 sm:flex-row">
  <h2 class="text-center sm:text-left text-lg sm:text-2xl p-2 rounded-lg shadow-lg gradient-background">
    {sectionTitle}
  </h2>
</div>

<style>
  .gradient-background {
    background: rgb(249, 178, 0);
    background: radial-gradient(
      circle,
      rgba(249, 178, 0, 0.7232142857142857) 14%,
      rgba(249, 178, 0, 0.6559873949579832) 90%
    );
  }
</style>
