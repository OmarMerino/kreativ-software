---
import { Image } from "astro:assets";
import linkd from "../../assets/pics/profile-in.svg";
import Card from "./Card.astro";

const { pic, name, role, description, link } = Astro.props;
---

<Card isUnderline={false}>
  <div class="p-[20px] flex flex-col h-full items-center">
    <picture><Image src={pic} alt={name} /></picture>
    <div class="flex flex-col sm:flex-row justify-between items-start">
      <div class="flex flex-col justify-end sm:ml-5">
        <h3 class="font-semibold">{name}</h3>
        <p class="text-sm text-gray-500">{role}</p>
      </div>
      {
        /* <a href={link} class="absolute right-0 top-0"><Image src={linkd} alt="Linkedin Logo" /></a> */
      }
    </div>
    <div class="w-full h-[2px] bg-black my-7"></div>
    <div class="flex-grow">{description}</div>
  </div>
</Card>
