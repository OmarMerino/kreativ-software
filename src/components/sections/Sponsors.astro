---
import { Image } from "astro:assets";
import s1 from "../../assets/pics/logo-junji.png";
import s2 from "../../assets/pics/ubb-logo.png";
import s4 from "../../assets/pics/vial-logo.png";
import s3 from "../../assets/pics/esbing-logotipo.jpg";
import s5 from "../../assets/pics/geosismica-logo.jpg";
import s6 from "../../assets/pics/company-logo6.svg";
import Section from "./Section.astro";
import SectionTitle from "../ui/SectionTitle.astro";

const sponsors = [
  // { logo: s1, alt: "Amazon logo" },
  // { logo: s2, alt: "Dribble logo" },
  { logo: s3, alt: "esbing logo" },
  { logo: s4, alt: "vial logo" },
  { logo: s5, alt: "Geosismica logo" },
  // { logo: s6, alt: "Zoom logo" },
];
---

<Section id="sponsors">
  <SectionTitle sectionTitle="Empresas que confian en nosotros" description="" />

  <div class="flex flex-wrap justify-center gap-7 mt-[60px]">
    {
      sponsors.map((sponsor) => {
        return (
          <div class="flex justify-center items-center">
            <Image src={sponsor.logo} alt={sponsor.alt} loading="eager" class="w-[200px] h-auto" />
          </div>
        );
      })
    }
  </div>
</Section>

